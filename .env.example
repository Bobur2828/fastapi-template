# Asosiy sozlamalar
APP_APP_NAME="FastAPI Shablon Dasturi"           # Ilova nomi
APP_APP_VERSION="0.1.0"                          # Ilovaning versiyasi
APP_DEBUG=true                                   # Debug rejimi (true bo‘lsa, xatoliklar tafsilotlari ko‘rsatiladi)

# Ma'lumotlar bazasi (komponentlari)
APP_DB_HOST=localhost                            # Ma'lumotlar bazasi serverining manzili
APP_DB_PORT=5432                                 # Ma'lumotlar bazasi porti (PostgreSQL uchun odatda 5432)
APP_DB_NAME=fastapi_db                           # Ma'lumotlar bazasi nomi
APP_DB_USER=postgres                             # Ma'lumotlar bazasiga kirish uchun foydalanuvchi
APP_DB_PASSWORD=postgres                         # Foydalanuvchi paroli

# Xavfsizlik
APP_BEARER_TOKEN=your-super-secret-bearer-token-change-me  
# API chaqiruvlar uchun maxfiy token (uni albatta o‘zgartiring)

# CORS (ruxsat etilgan manbalar — frontend manzillari)
APP_ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
# Qaysi domenlardan so‘rovlar qabul qilinishi mumkinligini aniqlaydi

# Log yozuvi
APP_LOG_LEVEL=INFO                               # Log darajasi (DEBUG, INFO, WARNING, ERROR)
APP_LOG_FILE=logs/app.log                        # Log fayli joylashuvi
